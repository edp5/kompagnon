{
  "name": "kompagnon",
  "version": "0.0.0",
  "description": "moving assistance platform for invalid people",
  "homepage": "https://github.com/edp5/kompagnon#readme",
  "bugs": {
    "url": "https://github.com/edp5/kompagnon/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edp5/kompagnon.git"
  },
  "license": "MIT",
  "author": "edp5",
  "type": "module",
  "scripts": {
    "release": "commit-and-tag-version",
    "ci:api": "cd api && npm ci",
    "ci:admin": "cd admin && npm ci",
    "ci:web": "cd web && npm ci",
    "ci:all": "run-p --print-label ci:api ci:web ci:admin",
    "configure": "sh ./scripts/configure.sh",
    "dev:api": "cd api && npm run dev",
    "dev:web": "cd web && npm run dev",
    "dev:admin": "cd admin && npm run dev",
    "dev": "run-p --print-label dev:api dev:web dev:admin",
    "lint:api": "cd api && npm run lint",
    "lint:web": "cd web && npm run lint",
    "lint:admin": "cd admin && npm run lint",
    "lint:root": "eslint .",
    "lint": "run-p --print-label lint:api lint:web lint:admin lint:root",
    "lint:fix": "eslint . --fix",
    "test:api": "cd api && npm test",
    "test:web": "cd web && npm test",
    "test:admin": "cd admin && npm test",
    "test": "run-p --print-label test:api test:web test:admin"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "eslint": "^9.39.1",
    "eslint-plugin-jsdoc": "^61.4.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-yaml": "^1.1.3",
    "globals": "^16.5.0"
  }
}
